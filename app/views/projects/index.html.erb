<div id="model_test_panel" class="panel">

  <div id="panel-wrapper">
    <div id='panel-body'>
      <center><h2>Projects</h2></center>
      <%= flash_helper() %>
      <table style="width:100%; border: 1px solid #ddd">
        <tr>
          <th>Name</th>
          <th>Project Manager</th>
          <th>Developer</th>
          <th>Created</th>
          <th>Last Updated</th>
          <th></th>
        </tr>

        <% @projects.each do |project| %>
            <tr>
              <td><%= link_to project.name, project_path(project) %></td>
              <td><%= project.project_manager %></td>
              <td><%= project.developer %></td>
              <td><%= project.created_at.strftime("%m/%d/%Y %I:%M") %></td>
              <td><%= project.updated_at.strftime("%m/%d/%Y %I:%M") %></td>
              <td><%= link_to (image_tag "delete-icon24x24.png"), project, method: :delete, data: {confirm: 'Are you sure?'} %></td>
            </tr>
        <% end %>
        <tr>
          <td colspan="6"><%= link_to 'Add New Project', new_project_path %></td>
        </tr>
      </table>


    </div>
  </div>

</div>
